<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit Cinema seat</h1>
    <% if @cinema_seat.persisted? %>
    <%= button_to 'Destroy', @cinema_seat, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', cinema_seat: @cinema_seat %>
</div>
