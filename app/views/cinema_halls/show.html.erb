<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Cinema hall</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to cinema_halls_path, class: button_class(theme: "transparent") do %>
      All Cinema halls
      <% end %>
      <%= link_to edit_cinema_hall_path(@cinema_hall), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
      <%= link_to new_payment_method_path, class: button_class(theme: "transparent") + " ml-3" do %>
        Add New
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Cinema hall:</p>
        <p><%= @cinema_hall.cinema_hall_id %></p>
      </li>
      <li>
        <p class="font-semibold">Cinema hall name:</p>
        <p><%= @cinema_hall.cinema_hall_name %></p>
      </li>
      <li>
        <p class="font-semibold">Total seats:</p>
        <p><%= @cinema_hall.total_seats %></p>
      </li>
      <li>
        <p class="font-semibold">Location:</p>
        <p><%= @cinema_hall.location.cinema_name %></p>
      </li>
  </ul>
</div>
